{
  "name": "irc-disc",
  "description": "Connects IRC and Discord channels by sending messages back and forth.",
  "keywords": [
    "discord",
    "irc",
    "gateway",
    "bot",
    "irc-disc",
    "reactiflux"
  ],
  "version": "1.1.0",
  "main": "dist/lib/index.js",
  "bin": {
    "irc-disc": "dist/lib/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:tribixbite/irc-disc.git"
  },
  "bugs": {
    "url": "https://github.com/tribixbite/irc-disc/issues"
  },
  "homepage": "https://github.com/tribixbite/irc-disc#readme",
  "scripts": {
    "start": "node dist/index.js",
    "start:server": "bun dist/lib/server.js",
    "build": "tsc",
    "format": "prettier --write '{lib,test}/**/*.?s'",
    "prepare": "npm run build",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "coverage": "vitest run --coverage"
  },
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.837.0",
    "@aws-sdk/s3-request-presigner": "^3.837.0",
    "@discordjs/builders": "^1.11.2",
    "discord.js": "^13.8.1",
    "irc-colors": "1.5.0",
    "irc-formatting": "1.0.0-rc3",
    "irc-upd": "0.11.0",
    "simple-markdown": "^0.7.3",
    "sqlite3": "^5.1.7",
    "strip-json-comments": "^3.1.1",
    "winston": "^3.3.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22",
    "@types/sqlite3": "^3.1.11",
    "@vitest/eslint-plugin": "^1",
    "eslint": "^9",
    "globals": "^14",
    "prettier": "~3.5",
    "typescript": "~5.8",
    "typescript-eslint": "^8",
    "vitest": "^3"
  },
  "optionalDependencies": {
    "@types/bun": "^1.0.0",
    "bun": "^1.0.0"
  }
}
